<h1>Enter a New Restaurant Listing</h1>


<% if current_user %>

  <%= form_for @restaurant, url: {action: "create"} do |f| %>
    <div class="field">
      <%= f.text_field :name, placeholder: 'Restaurant Name' %>
    </div>

    <div class="field">
      <%= f.number_field :capacity, placeholder: 'Capacity: eg. 90' %>
    </div>

    <div class="field">
      <%= f.text_field :url, placeholder: 'Picture: eg. restaurant_image.jpg' %>
    </div>

    <div>
      <%= f.hidden_field :owner_id, value: current_user.id %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>

  <% end %>

<% end %>
